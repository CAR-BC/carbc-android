<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.My_history_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/homemyVehicle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp">

        <Spinner
            android:id="@+id/my_history_info_vehicle_id"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"></Spinner>
        <TextView
            android:id="@+id/my_history_info_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="car"
            android:textSize="25dp"
            android:layout_margin="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/homeAddTx">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner :"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/search_owner_txt"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/homeAddTx">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration No :"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/search_reg_no_txt"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/homeAddTx">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type :"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/search_type_txt"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/homeAddTx">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Model :"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/search_model_txt"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/homeAddTx">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuel Type :"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/search_fuel_type_txt"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/homeAddTx">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity :"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <EditText
                android:id="@+id/search_capacity_txt"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</FrameLayout>
