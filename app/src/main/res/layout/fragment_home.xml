<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Home">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/HomeImageView"
            android:layout_width="332dp"
            android:layout_height="195dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_marginBottom="40dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/home_new_tx_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Transaction"
                android:background="@color/homeAddTx"
                android:padding="10dp"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/home_my_vehicle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="My History"
                    android:background="@color/homemyVehicle"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>

                <Button
                    android:id="@+id/home_search_vehicle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/homesearchVehicle"
                    android:text="Search Vehicle"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/home_confirm_Tx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/homeConfirmTx"
                android:padding="10dp"
                android:text="Confirm Transaction"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
