<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Service_and_repair_running_repair">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/homemyVehicle">

            <Spinner
                android:id="@+id/my_history_info_vehicle_id"
                android:layout_width="match_parent"
                android:layout_height="25dp"></Spinner>

            <TextView
                android:id="@+id/my_history_info_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="car"
                android:textSize="25dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/homeAddTx">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@color/clrWhite"></Spinner>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/clrWhite"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map" />

        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/service_and_repair_running_repair_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>
    </LinearLayout>
</FrameLayout>
