<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Singup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="?attr/colorPrimary"
            android:elevation="6dp"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/back_button"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="112dp"
                    android:layout_marginTop="9dp"
                    android:text="Register to CAR.BC"
                    android:textSize="15dp"
                    android:textColor="@color/clrWhite"/>

            </RelativeLayout>


        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/signup_user_name"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/clrWhite"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_user_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="User Name"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your name"
                android:inputType="text"
                android:textSize="15dp"
                android:maxLines="1"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_role_ll"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_role_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Role: "
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/signup_role_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter National ID number"
                android:maxLines="1"
                android:inputType="textWebEmailAddress"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_id_ll"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_id_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Identity card number: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_id_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter National ID number"
                android:maxLines="1"
                android:textSize="15dp"
                android:inputType="textWebEmailAddress"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_email_ll"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Email: "
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_email_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email"
                android:maxLines="1"
                android:textSize="15dp"
                android:inputType="textWebEmailAddress"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/initial_layout_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_label_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Password"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="15dp"
                android:padding="5dp" />
            <TextView
                android:id="@+id/password_strong_text"
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:text="Enter strong password with at least 8 characters with a uppercase letter, a number and a symbol"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/signup_confirm_password_ll"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_label_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Confirm Password"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/signup_confirm_password_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter password again"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="15dp"
                android:padding="5dp" />

        </LinearLayout>

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Register"
            android:textSize="20dp" />
    </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>