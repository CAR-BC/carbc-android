<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.My_history_status">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/homemyVehicle"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp">

        <Spinner
            android:id="@+id/my_history_reminders_vehicle_id"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"></Spinner>
        <TextView
            android:id="@+id/my_history_reminders_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="car"
            android:textSize="25dp"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <ListView
        android:id="@+id/my_history_status_list"
        android:layout_margin = "15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>

</FrameLayout>
